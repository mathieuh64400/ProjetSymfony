
{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	{% include "template_parts/_nav2.html.twig" %}
	<form method="post" style="overflow-x: hidden;">

		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				<p style="text-align:center" class="mt-3">"Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
				<a class="btn btn-primary btn-lg ml-2" href="{{ path('app_logout') }}" style="margin-top:5%" role="button">Deconnexion</a>
			</div>
		{% else %}
			<h1 class="h3 mb-3 font-weight-normal" style="text-Align:center; margin-top:5%;">Connectez vous ici</h1>
			<div class="row" style="margin-left:33%">
				<div class="row">
					<label for="inputEmail">Email</label>
					<input type="email" value="{{ last_username }}" name="email" id="inputEmail" style="margin-right:5%;" class="form-control" required autofocus>
				</div>
				<div class="row" style="margin-left:2%">
					<label for="inputPassword">Password</label>
					<input type="password" name="password" id="inputPassword" class="form-control" style="margin-right:5%;" required>
				</div>
			</div>
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			<button class="btn btn-lg btn-primary " style="margin-left:47%; margin-bottom:5%; margin-top:5%" type="submit">
				Connexion
			</button>
			<div>
				<div style="margin-left:45%; margin-top:1%; margin-bottom:5%">
					<strong>perte de vos identifiants!!</strong>
					<br>
					Pr√©cisez-le dans le formulaire de contact.<br>
					Nous vous desinscrirons et vous devrez recreer un compte!!
					<div> 
					 <a href="{{path ('contact')}}">
									<button type="button" class="btn btn-warning">
										Nous contacter</button>
								</a> 
					</div>
				</div>


				{#
										        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
										        See https://symfony.com/doc/current/security/remember_me.html
										 #}
				{# <div class="checkbox mb-3">
											<label>
												<input type="checkbox" name="_remember_me">
												Se souvenir de moi
											</label>
										</div> #}


			{% endif %}
		</form>
	{% endblock %}