<form method="post" action="{{ path('annonce_delete', {'id': annonce.id}) }}" onsubmit="return confirm('Etes vous sur de vouloir enlever ce commentaire?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ annonce.id) }}">
   
    <button class="btn btn-warning btn-lg btn-block">Supprimer L'annonce</button>
</form>