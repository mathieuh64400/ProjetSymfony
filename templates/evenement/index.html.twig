{% extends 'base.html.twig' %}
{% block title %}Accueil
{% endblock %}

{% block body %}

	{% include "template_parts/_nav2.html.twig" %}


	<div class="example-wrapper">
		<h1 class="text-center">Nos produits</h1>

		<br>
		<br>
		<h2 class="text-center">
			{% trans %}
			Les dernières Actualités:
			{% endtrans %}
		</h2>
		<br>
		<br>

		<div class="container-fluid">
			<div class="row">
				{% for evenements in evenements %}
					<div class="card text-white bg-primary mb-3" style="max-width: 15rem; margin-left:11%">
						<div class="card-header">  <strong>{{evenements.nature.Type}}</strong> </div>
						<div class="card-body" style="background-color:white; color=black;">
							<h4 class="card-title" style="color:black;text-Align:center;">EVENEMENT: <br>{{ evenements.Nom }}</h4> 
							<img style="height: 40%; width: 40%;margin-left:25%; display: block;" src="{{evenements.Image}}" alt="Card image">
							<p class="card-text" style="color:black;">{{evenements.Contenu}}</p>
						</div>
						<ul class="list-group list-group-flush" style="background-color:white; color=black;">
							<li>
								<div class="card-body mx-auto">
									<p class="card-text" style="color:black;">GRANDE NOUVELLE!!!</p>
								</div>
							</li>
						</ul>
						<div class="card-footer text-warning"> Mis en ligne le:<strong>{{evenements.Date|date('Y-m-d')}}</strong>
						</div>
							
					</div>


				{% endfor %}
			</div>
			

		</div>

	</div>
{% endblock %}
